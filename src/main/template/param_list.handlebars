<div class="row param-list">
  <div class="col-sm-10">
    <label class="code c-input-label" for="textInput">{{name}}</label>
    <input class="c-input-field t-item-name" type="text" id="textInput" />
  </div>
</div>
<div class="row">
  <div class="col-sm-10">
    <select {{#isArray this}} multiple='multiple'{{/isArray}} class='parameter param-value' name='{{name}}'>
      {{#if required}}
      {{else}}
        {{#if defaultValue}}
        {{else}}
          {{#isArray this}}
          {{else}}
            <option selected="" value=''></option>
          {{/isArray}}
        {{/if}}
      {{/if}}
      {{#each allowableValues.descriptiveValues}}
        {{#if isDefault}}
          <option selected="" value='{{value}}'>{{value}} (default)</option>
        {{else}}
          <option value='{{value}}'>{{value}}</option>
        {{/if}}
      {{/each}}
    </select>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 param-description">
    <p>{{{description}}}</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 param-type">
    <p>{{{paramType}}}</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 param-body">
    <span class="data-type"></span>
  </div>
</div>
