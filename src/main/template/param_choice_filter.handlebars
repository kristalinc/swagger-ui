<div class="row param-choice-filter">
	<div class="col-sm-4">
		<select class="param-choice">
			<option value="" disabled selected> Filter by... </option>
			{{#each allChoices}}
				<option value="{{this}}">{{this}}</option>
			{{/each}}
		</select>
	</div>
	<div class="col-sm-3">
		<select class="filter-operator">
			<option value="==">==</option>
			<option value="!=">!=</option>
			<option value=">">&gt;</option>
			<option value="<">&lt;</option>
			<option value=">=">&gt;=</option>
			<option value="<=">&lt;=</option>
		</select>
	</div>
	<div class="col-sm-4">
		<input class="filter-argument c-input-field">
	</div>
	<div class="col-sm-1 row-action">
		<button disabled type="button" class="close c-button-remove e__button-icon-secondary" data-dismiss="modal" aria-hidden="true"><i class="fa fa-trash-o"></i></button>
	</div>
</div>
